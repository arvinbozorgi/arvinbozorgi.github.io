RewriteEngine On
RewriteBase /

# Force HTML content type for thewebsiteproject
<FilesMatch "^thewebsiteproject$">
    ForceType text/html
</FilesMatch>

# If the request is not for a file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Rewrite /thewebsiteproject to /thewebsiteproject/index.html
RewriteRule ^thewebsiteproject/?$ thewebsiteproject/index.html [L]

# Prevent directory listing
Options -Indexes

# Set default character set
AddDefaultCharset UTF-8

# Force HTML content type for the directory
<Directory "thewebsiteproject">
    ForceType text/html
    DirectoryIndex index.html
</Directory> 
